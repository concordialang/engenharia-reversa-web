{
	"include": ["src"],
	"exclude": ["tests__"],
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["DOM", "ESNext", "dom.iterable"],
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmitOnError": false,
		"strict": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	}
}
